{
    "name": "expenses-tracker-bot",
    "version": "1.0.0",
    "description": "Telegram bot for expenses tracking with PostgreSQL",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "migrate": "node src/migrate.js",
        "test": "jest",
        "logs": "tail -f logs/application-$(date +%Y-%m-%d).log",
        "logs:error": "tail -f logs/error-$(date +%Y-%m-%d).log",
        "monitoring:health": "curl http://localhost:3001/health",
        "monitoring:metrics": "curl http://localhost:3001/metrics",
        "monitoring:check": "node check-metrics.js",
        "monitoring:start": "./start-monitoring.sh"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^5.1.0",
        "nanoid": "^3.3.7",
        "node-cron": "^4.2.1",
        "pg": "^8.11.3",
        "prom-client": "^15.1.3",
        "telegraf": "^4.16.3",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.1",
        "dotenv-cli": "^9.0.0",
        "jest": "^29.0.0",
        "jest-junit": "^16.0.0",
        "nodemon": "^3.0.2",
        "playwright": "^1.54.1",
        "supertest": "^7.1.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/setup.js"
        ],
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/__tests__/**",
            "!src/migrations/**"
        ],
        "coverageDirectory": "test-results/coverage",
        "testResultsProcessor": "jest-junit",
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "test-results",
                    "outputName": "junit.xml",
                    "classNameTemplate": "{classname}",
                    "titleTemplate": "{title}",
                    "ancestorSeparator": " â€º ",
                    "usePathForSuiteName": true
                }
            ]
        ]
    }
}
